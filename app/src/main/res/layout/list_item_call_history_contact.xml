<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_history_contact_card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_call_history_contact_height"
    android:layout_gravity="center"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="4dp"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_elevation"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <ImageView
        android:id="@+id/list_item_history_contact_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        tools:src="@color/accent"
        />

    <LinearLayout
        android:id="@+id/list_item_history_contact_buttons"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        >

      <ImageView
          android:id="@+id/list_item_history_contact_edit"
          android:layout_width="34dp"
          android:layout_height="34dp"
          android:layout_marginEnd="8dp"
          android:layout_marginTop="4dp"
          android:contentDescription="@string/list_item_history_contact_edit_image"
          android:padding="8dp"
          android:scaleType="centerCrop"
          android:src="@drawable/ic_mode_edit_white_24dp"
          android:tint="@color/accent"
          />

      <ImageView
          android:id="@+id/list_item_history_contact_favorite"
          android:layout_width="34dp"
          android:layout_height="34dp"
          android:layout_marginEnd="8dp"
          android:layout_marginTop="4dp"
          android:contentDescription="@string/list_item_history_contact_favorite_image"
          android:padding="8dp"
          android:scaleType="centerCrop"
          android:src="@drawable/ic_favorite_white_24dp"
          android:tint="@color/accent"
          />

    </LinearLayout>

    <TextView
        android:id="@+id/list_item_history_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/list_item_history_contact_image"
        android:layout_toStartOf="@+id/list_item_history_contact_buttons"
        android:lines="1"
        android:maxLines="1"
        tools:text="John Doe"
        />

    <TextView
        android:id="@+id/list_item_history_contact_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_history_contact_name"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/list_item_history_contact_image"
        android:layout_toStartOf="@+id/list_item_history_contact_buttons"
        android:lines="1"
        android:maxLines="1"
        tools:text="00 123 456 789"
        />

    <TextView
        android:id="@+id/list_item_history_contact_last_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_history_contact_number"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/list_item_history_contact_image"
        android:layout_toStartOf="@+id/list_item_history_contact_buttons"
        android:lines="1"
        android:maxLines="1"
        tools:text="Last called: yesterday"
        />

  </RelativeLayout>

</android.support.v7.widget.CardView>