<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <ProgressBar
      android:id="@+id/fragment_introduction_loading"
      android:layout_width="match_parent"
      android:layout_height="12dp"
      android:layout_alignParentBottom="true"
      android:indeterminate="true"
      android:indeterminateTint="@color/primary_dark"
      android:visibility="gone"
      tools:visibility="visible"
      style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
      />

  <TextView
      android:id="@+id/fragment_introduction_text"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_centerInParent="true"
      android:layout_marginBottom="140dp"
      android:layout_marginEnd="44dp"
      android:layout_marginStart="44dp"
      android:gravity="center"
      android:textAlignment="viewStart"
      android:textSize="@dimen/fragment_introduction_text_size"
      tools:ignore="RtlCompat"
      tools:text="@string/fragment_introduction_text_2"
      />

  <android.support.design.widget.FloatingActionButton
      android:id="@+id/fragment_introduction_fab_button"
      android:layout_width="44dp"
      android:layout_height="44dp"
      android:layout_alignParentBottom="true"
      android:layout_alignParentEnd="true"
      android:layout_margin="24dp"
      android:src="@drawable/ic_navigate_next_white_24dp"
      />

</RelativeLayout>